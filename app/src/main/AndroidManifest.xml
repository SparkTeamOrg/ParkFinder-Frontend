<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:networkSecurityConfig="@xml/network_security_config"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParkFinder"
        tools:targetApi="31">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.app.parkfinder.cropper.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>



        <service
            android:name=".foreground.NotificationService"
            android:exported="false"
            android:enabled="true"
            android:foregroundServiceType="dataSync"
            >
        </service>




        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.auth.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.auth.register.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.auth.login.ForgotPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.auth.register.VerificationCodeActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.auth.login.ResetPasswordVerificationCodeActivity"
            android:exported="false"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.auth.login.EnterNewPasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.auth.register.RegisterUserDataActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.auth.register.RegisterVehicleInfoActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.NavigationActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.parking.FreeParkingSearchListActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.vehicle.VehicleInfoActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.vehicle.AddVehicleActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.vehicle.UpdateVehicleActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.parking.ReservationActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.parking.ParkingSpotListActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.HelpCenterActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name=".ui.activities.statistic.StatisticsActivity"
            android:exported="true"
            android:theme="@style/Theme.ParkFinder">
        </activity>
        <activity
            android:name="com.canhub.cropper.CropImageActivity"
            android:theme="@style/CustomCropTheme" />

    </application>

</manifest>